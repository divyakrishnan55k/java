import java.util.Scanner;
public class Main{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int arr[]=new int[n];
        for(int i=0;i<n;i++){
            arr[i]=sc.nextInt();
        }
            int Sum=0;
            for(int i=0;i<n;i++){
                if(i%2==0){
                    Sum+=arr[i];
                }
                else{
                    Sum-=arr[i];
                }
            }
                System.out.println("Alternate sum of an array : "+Sum);
                }
            }

